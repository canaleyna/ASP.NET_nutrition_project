@using EntityLayer.Concrete
@model List<Food>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{string color = "";}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>
            <!-- Main content -->
            <section class="content">
                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Yemek İşlemleri</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped projects">
                            <thead>
                                <tr>
                                    <th style="width: 10%">
                                        #
                                    </th>
                                    <th style="width: 20%">
                                        Yemek Adı
                                    </th>
                                    <th style="width: 20%" class="text-center">
                                        Kategori
                                    </th>

                                    <th style="width: 20%">
                                        Kalori(100gr)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    if(item.Category.CategoryName =="Ana Yemekler")
                                    {
                                        color = "badge badge-warning";
                                    }
                                    if (item.Category.CategoryName == "İçecekler")
                                    {
                                        color = "badge badge-success";
                                    }
                                    if (item.Category.CategoryName == "Sebzeler")
                                    {
                                        color = "badge badge-info";
                                    }
                                    if (item.Category.CategoryName == "Fast-Food")
                                    {
                                        color = "badge badge-secondary";
                                    }
                                    if (item.Category.CategoryName == "Tatlılar")
                                    {
                                        color = "badge badge-danger";
                                    }
                                    if (item.Category.CategoryName == "Ekmekler")
                                    {
                                        color = "badge badge-tool";
                                    }


                                <tr>
                                    <td>
                                        @item.FoodID
                                    </td>
                                    <td>
                                        <a>
                                            @item.FoodName
                                        </a>
                                        <br />
                                        <br />
                                    </td>
                                    <td class="project-state">
                                        <span class="@color">@item.Category.CategoryName</span>
                                    </td>

                                    <td>
                                        @item.FoodCalorie
                                    </td>
                                    <td class="project-actions text-right">
                                        <a class="btn btn-info btn-sm" href="/Food/EditFood/@item.FoodID">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Düzenle
                                        </a>
                                        <a class="btn btn-danger btn-sm" href="/Food/DeleteFood/@item.FoodID">
                                            <i class="fas fa-trash">
                                            </i>
                                            Sil
                                        </a>
                                    </td>
                                </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </section>
</body>
</html>
<a href="/Food/AddFood" class="btn btn-primary">Yeni Yemek Girişi</a>


